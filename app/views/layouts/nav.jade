include ./header
#bhs_sub_navBox
    #bhs_sub_megamenuWrap
        ul.bhs_sub_megamenu.clearfix
            li.bhs_sub_megamenu_newpd
                a(href="/schedule/")
                    h2
                        span
                            span.bhs_mainttl 新品信息
            li.bhs_sub_megamenu_gunpla
                a(href="#searchGunpla")
                    h2
                        span
                            span.bhs_mainttl #{gunplaCate.display_name}
            li.bhs_sub_megamenu_chapla
                a(href='#searchCharacter')
                    h2
                        span
                            span.bhs_mainttl #{characterCate.display_name}
            li.bhs_sub_megamenu_evc
                a(href='#searchEvc')
                    h2
                        span
                            span.bhs_mainttl #{eventCate.display_name} · #{campaignCate.display_name}
            li.bhs_sub_megamenu_hos
                a(href='#online_shop_menu')
                    h2
                        span
                            span.bhs_mainttl 在线商店
    .lists
        #searchGunpla.bhs_sub_megamenu_open
            .bhs_sub_header
                h3 #{gunplaBrandCate.display_name}
                ul.bhs_sub_header_gunpla
                    if gunplaBrandCate && gunplaBrandCate.son
                        each item, index in gunplaBrandCate.son
                            +cate_li(item)

                .header_line
                    hr
                h3 #{gunplaSeriesCate.display_name}
                ul.bhs_sub_header_gunpla
                    if gunplaBrandCate && gunplaSeriesCate.son
                        each item, index in gunplaSeriesCate.son
                            +cate_li(item)
                .header_line
                    hr
                .bhs_header_gunpla_morelink
                    +cate_link(gunplaCate)
                        span 查看所有类目
        #searchCharacter.bhs_sub_megamenu_open
            .bhs_sub_header
                h3 #{characterBrandCate.display_name}
                ul.bhs_sub_header_chapla
                    if characterBrandCate && characterBrandCate.son
                        each item, index in characterBrandCate.son
                            +cate_li(item)
                .header_line
                    hr
                h3 #{characterSeriesCate.display_name}
                ul.bhs_sub_header_chapla
                    if characterSeriesCate && characterSeriesCate.son
                        each item, index in characterSeriesCate.son
                            +cate_li(item)
                .header_line
                    hr
                .bhs_header_chapla_morelink
                    +cate_link(characterCate)
                        span 查看所有类目
        #searchEvc.bhs_sub_megamenu_open
            .bhs_sub_header
                .bhs_header_evc_btn
                    +cate_link(eventCate)
                        span #{eventCate.display_name}
                .header_line_nomargin
                    hr
                .bhs_header_evc_btn
                    +cate_link(campaignCate)
                        span #{campaignCate.display_name}
        #online_shop_menu.bhs_sub_megamenu_open
            if web_cfg.tmall_url
                .bhs_sub_header
                    .bhs_header_evc_btn
                            a(href=web_cfg.tmall_url.value target="_blank")
                                span= web_cfg.tmall_url.name
                .header_line_nomargin
                    hr
            if web_cfg.jd_url
                .bhs_sub_header
                    .bhs_header_evc_btn
                            a(href=web_cfg.jd_url.value target="_blank")
                                span= web_cfg.jd_url.name
