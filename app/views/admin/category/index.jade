extends ../layouts/default

block content
    - var url = '/admin/category'
    div.row
        div.col-md-12
            a.btn.btn-success(href='#{url}/add') 新增
    table.table
        thead
            th #
            th 分类名称
            th 上级分类名称
            th 层数
            th 操作
        tbody
            each item,index in list
                tr
                    td= index+1
                    td= item.display_name
                    td
                        if item.parent_id
                            | #{item.parent_id.display_name}
                        else
                            | 无
                    td= item.level
                    td
                        .btn-group
                            a.btn.btn-info(href='#{url}/edit/#{item._id}') 改
                            a.btn.btn-danger(href='#{url}/delete/#{item._id}') 删
