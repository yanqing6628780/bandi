include ../base
doctype html
html(lang="zh-cn")
    head
        title #{title}|#{web_cfg.web_name.value}
        meta(
            name="viewport"
            content="width=1024, maximum-scale=1, user-scalable=yes"
        )
        meta(
            name="keywords"
            content="#{web_cfg.web_keywords.value}"
        )
        meta(
            name="description"
            content="#{web_cfg.web_description.value}"
        )
        link(rel='stylesheet', href='//at.alicdn.com/t/font_1476669536_3056495.css')
        link(rel='stylesheet', href='/css/lib/bootstrap.min.css')
        link(rel='stylesheet', href='/css/style.css')
        link(
            rel="stylesheet"
            href="//cdn.bootcss.com/bootstrap-datepicker/1.7.1/css/bootstrap-datepicker.css"
        )
        link(rel="stylesheet", href="/js/lib/jquery-file-upload/css/jquery.fileupload.css")
    body(data-path="#{path}")
        if admin
            nav.navbar.navbar-inverse(role='navigation')
                .container
                    .navbar-header
                        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                            span.sr-only Toggle navigation
                            span.icon-bar
                            span.icon-bar
                            span.icon-bar
                    a.navbar-brand(href='/pages/index.html') Bandi
                    #navbar.collapse.navbar-collapse
                        ul.nav.navbar-nav.navbar-right
                            li.dropdown
                                a.dropdown-toggle(data-toggle="dropdown" href="#")
                                    if admin.username
                                        | #{admin.username}
                                    else
                                        | #{admin.eamil}
                                    span.caret
                                ul.dropdown-menu
                                    li
                                        a(href='/admin/logout') 退出
            .container-fluid
                .messages.row
                    include ../../includes/messages.jade
            .container
                .row
                    section
                        .menu.col-md-2.col-sm-2
                            .list-group.text-center
                                a.list-group-item(href='/admin/web_config') 网站配置
                                a.list-group-item(href='/admin/user') 用户管理
                                a.list-group-item(href='/admin/category') 分类管理
                                a.list-group-item(href='/admin/article') 文章管理
                                a.list-group-item(href='/admin/index_slider') 首页轮换图管理
                        .col-md-10.col-sm-10
                            block content
        else
            block content

        script(src="//cdn.bootcss.com/jquery/1.9.1/jquery.min.js")
        script(src="/js/lib/jquery-file-upload/js/vendor/jquery.ui.widget.js")
        script(src="/js/lib/bootstrap.min.js")
        script(src="//cdn.bootcss.com/bootstrap-datepicker/1.7.1/js/bootstrap-datepicker.min.js")
        script(src="//cdn.bootcss.com/bootstrap-datepicker/1.7.1/locales/bootstrap-datepicker.zh-CN.min.js")
        script(src="/js/lib/ueditor/ueditor.config.js")
        script(src="/js/lib/ueditor/ueditor.all.min.js")
        script(src="/js/lib/ueditor/lang/zh-cn/zh-cn.js")
        script(src="/js/lib/jquery-file-upload/js/jquery.fileupload.js")
        script(src="/js/script.js")
        script.
            $(document).ready(function() {
                var path = $('body').attr('data-path');
                $(".menu").find("a[href='"+path+"']").addClass('active');
                $('.datepicker').datepicker({
                    language: "zh-CN"
                });
            });
        block scripts
